{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2024"
        ],
        "types": ["node", "jest"],
        "paths": {
            "@src/*": ["src/*"]
        },
        "baseUrl": ".",
        "module": "commonjs",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "exclude": [
        "jest.config.js",
        "tests/**/*"
    ]
}